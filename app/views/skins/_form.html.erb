<%= form_for @skin,  html: { multipart: true } do |f| %>

  <% if @skin.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(@skin.errors.count, "error") %> prohibited this skin from being saved:</h3>
      <ul>
      <% @skin.errors.full_messages.each do |msg| %>
        <li><%= msg %></li> <br/>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: 'control-label' %><br>
    <%= f.text_field :name, class: 'form-control' %>
    <span class="help-block"></span>
  </div>

  <div class="form-group">
    <%= f.label :skin_type, class: 'control-label' %><br>
    <%= f.text_field :skin_type, class: 'form-control' %>
    <span class="help-block"></span>
  </div>

  <div class="form-group">
    <%= f.label :price, class: 'control-label' %><br>
    <%= f.text_field :price, class: 'form-control' %>
    <span class="help-block"></span>
  </div>

  <div class="form-group">
    <%= f.label :image, class: 'control-label' %><br>
    <%= f.file_field :image, class: 'form-control' %>
    <span class="help-block"></span>
  </div>

  <div class="actions" style="text-align:center">
    <%= f.submit 'Submit', class: 'btn btn-success'%>
  </div>

<% end %>
