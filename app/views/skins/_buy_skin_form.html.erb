<%= form_tag charges_path(skin_id: skin.id), id: "payment_form_#{skin.id}" do %>
  <span class="payment-errors"></span>
  <div class="form-group">
    <%= label_tag :email %>
    <%= text_field_tag :email, current_user.email , class: "form-control", data: {stripe: "email" } %>
  </div>

  <div class="form-group">
    <%= label_tag :card_number, "Credit Card Number" %>
    <%= text_field_tag :card_number, nil, name: nil, class: "form-control", data: {stripe: "number"}  %>
  </div>
  <div class="row">
    <div class="form-group col-md-9">
      <%= label_tag :card_month, "Card Expiration" %>
      <div class="row">
        <div class="col-md-6">
          <%= select_month nil, {add_month_numbers_true: true}, {name: nil, class: "form-control", id: "card_month", data: {stripe: "exp-month"} } %>
        </div>
        <div class="col-md-6">
          <%= select_year nil, {start_year: Date.today.year, end_year: Date.today.year+15}, {name: nil, class: "form-control", id: "card_year", data: {stripe: "exp-year"} } %>
        </div>
      </div>
    </div>

    <div class="form-group col-md-3">
      <%= label_tag :CCV %>
      <%= text_field_tag :CCV, "" , class: "form-control", size: 4, data: {stripe: "ccv" } %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <input type="submit" class="submit btn btn-success" value="Pay <%= skin.price %>$">
    </div>
  </div>
<% end %>
