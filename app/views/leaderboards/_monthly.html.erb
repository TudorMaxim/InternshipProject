<% @rank = 1 %>
<% @best.each do |user| %>
  <% if @rank - 1 == @my_position %>
    <tr class="success">
      <td> <%= @rank %> </td>
      <td>
        <%= gravatar_for user, size: 50 %>
        <%= link_to user.full_name, user %>
      </td>
      <td> <%= monthly_victories(user) %> </td>
      <td>
        <% fav = monthly_favorite_hand(user) %>
        <i class="fa fa-hand-<%=fav%>-o"></i>
        <%= fav %>
       </td>
      <% if @rank == 1 %>
        <td> <i class="fa fa-trophy" id="gold"></i> </td>
      <% elsif @rank == 2 %>
        <td> <i class="fa fa-trophy silver" id="silver"></i> </td>
      <% elsif @rank == 3 %>
        <td> <i class="fa fa-trophy bronze" id="bronze"></i> </td>
      <% else %>
        <td></td>
      <% end %>
    </tr>
  <% else %>
    <tr>
      <td> <%= @rank %></td>
      <td>
        <%= gravatar_for user, size: 50 %>
        <%= link_to user.full_name, user %>
      </td>
      <td> <%= monthly_victories(user) %> </td>
      <td>
        <% fav = monthly_favorite_hand(user) %>
        <i class="fa fa-hand-<%=fav%>-o"></i>
        <%= fav %>
      </td>
      <% if @rank == 1 %>
        <td> <i class="fa fa-trophy" id="gold"></i> </td>
      <% elsif @rank == 2 %>
        <td> <i class="fa fa-trophy silver" id="silver"></i> </td>
      <% elsif @rank == 3 %>
        <td> <i class="fa fa-trophy bronze" id="bronze"></i> </td>
      <% else %>
        <td></td>
      <% end %>
    </tr>
  <% end %>
  <% @rank = @rank + 1 %>
<% end %>

<% if !@my_position.nil? && @my_position > 10 %>
  <tr class="success">
    <td> <%= @my_position %> </td>
    <td>
      <%= gravatar_for current_user, size: 50 %>
      <%= link_to current_user.full_name, current_user %>
    </td>
    <td> <%= monthly_victories(current_user) %> </td>
    <td>
      <% fav = monthly_favorite_hand(current_user) %>
      <i class="fa fa-hand-<%=fav%>-o"></i>
      <%= fav %>
    </td>
    <td> </td>
<% end %>
