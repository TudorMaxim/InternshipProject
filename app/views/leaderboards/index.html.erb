<h1>Leaderboard</h1>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr class="info">
        <th> # </th>
        <th> Name </th>
        <th> Victories </th>
        <th colspan="2"> Favorite Choice </th>

      </tr>
    </thead>
    <tbody>
      <% rank = 1 %>
      <% @best_all_time.each do |user| %>
        <% if rank - 1 == @my_position %>
          <tr class="success">
            <td> <%= rank %> </td>
            <td>
              <%= gravatar_for user, size: 50 %>
              <%= link_to user.full_name, user %>
            </td>
            <td> <%= user.victories %> </td>
            <td> unknown </td>
            <% if rank == 1 %>
              <td> <i class="fa fa-trophy" id="gold"></i> </td>
            <% elsif rank == 2 %>
              <td> <i class="fa fa-trophy silver" id="silver"></i> </td>
            <% elsif rank == 3 %>
              <td> <i class="fa fa-trophy bronze" id="bronze"></i> </td>
            <% else %>
              <td></td>
            <% end %>
          </tr>
        <% else %>
          <tr>
            <td> <%= rank %></td>
            <td>
              <%= gravatar_for user, size: 50 %>
              <%= link_to user.full_name, user %>
            </td>
            <td> <%= user.victories %> </td>
            <td> unknown </td>
            <% if rank == 1 %>
              <td> <i class="fa fa-trophy" id="gold"></i> </td>
            <% elsif rank == 2 %>
              <td> <i class="fa fa-trophy silver" id="silver"></i> </td>
            <% elsif rank == 3 %>
              <td> <i class="fa fa-trophy bronze" id="bronze"></i> </td>
            <% else %>
              <td></td>
            <% end %>
          </tr>
        <% end %>
        <% rank = rank + 1 %>
      <% end %>

      <% if !@my_position.nil? && @my_position > 10 %>
        <tr class="success">
          <td> <%= @my_position %> </td>
          <td>
            <%= gravatar_for current_user, size: 50 %>
            <%= link_to current_user.full_name, current_user %>
          </td>
          <td> <%= current_user.victories %> </td>
          <td> unknown </td>
          <td> </td>
      <% end %>
    </tbody>
  </table>
</div>
