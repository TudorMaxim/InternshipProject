<% @rank = 1 %>
<% @best.each do |user| %>
  <% if @rank - 1 == @my_position %>
    <tr class="success">
      <td> <%= @rank %> </td>
      <td>
        <% unless user.provider %>
          <%= gravatar_for user, size: 50 %>
        <% else %>
          <%= image_tag user.avatar_file_name, class: "gravatar", size: "50" %>
        <% end %>
        <%= link_to user.full_name, user %>
      </td>
      <td> <%= all_time_victories(user) %> </td>
      <td>
        <% fav = all_time_favorite_hand(user) %>
        <i class="fa fa-hand-<%=fav%>-o"></i>
        <%= fav %>
       </td>
      <% if @rank == 1 %>
        <td> <i class="fa fa-trophy" id="gold"></i> </td>
      <% elsif @rank == 2 %>
        <td> <i class="fa fa-trophy silver" id="silver"></i> </td>
      <% elsif @rank == 3 %>
        <td> <i class="fa fa-trophy bronze" id="bronze"></i> </td>
      <% else %>
        <td></td>
      <% end %>
    </tr>
  <% else %>
    <tr>
      <td> <%= @rank %></td>
      <td>
        <% unless user.provider %>
          <%= gravatar_for user, size: 50 %>
        <% else %>
          <%= image_tag user.avatar_file_name, class: "gravatar", size: "50" %>
        <% end %>
        <%= link_to user.full_name, user %>
      </td>
      <td> <%= all_time_victories(user) %> </td>
      <td>
        <% fav = all_time_favorite_hand(user) %>
        <i class="fa fa-hand-<%=fav%>-o"></i>
        <%= fav %>
      </td>
      <% if @rank == 1 %>
        <td> <i class="fa fa-trophy" id="gold"></i> </td>
      <% elsif @rank == 2 %>
        <td> <i class="fa fa-trophy silver" id="silver"></i> </td>
      <% elsif @rank == 3 %>
        <td> <i class="fa fa-trophy bronze" id="bronze"></i> </td>
      <% else %>
        <td></td>
      <% end %>
    </tr>
  <% end %>
  <% @rank = @rank + 1 %>
<% end %>

<% if !@my_position.nil? && @my_position > 10 %>
  <tr class="success">
    <td> <%= @my_position %> </td>
    <td>
      <% unless current_user.provider %>
        <%= gravatar_for current_user, size: 50 %>
      <% else %>
        <%= image_tag current_user.avatar_file_name, class: "gravatar", size: "50" %>
      <% end %>
      <%= link_to current_user.full_name, current_user %>
    </td>
    <td> <%= all_time_victories(current_user) %> </td>
    <td>
      <% fav = all_time_favorite_hand(current_user) %>
      <i class="fa fa-hand-<%=fav%>-o"></i>
      <%= fav %>
    </td>
    <td> </td>
<% end %>
