<% provide(:title, 'My Friends') %>
<% if !@my_friends.empty? %>
  <h1>My Friends</h1>

  <div style="float:right">
    <%= form_tag friendships_path, method: 'get', remote: true do %>
      <%= text_field_tag :search, params[:search] %>
      <%= button_tag type: "submit", class: "btn btn-default btn-sm" do %>
         <span class="fa fa-search"></span>
      <% end %>
    <% end %>
  </div>

  <div id="my_friends">
    <%= render "friendships/friends" %>
  </div>

<% else %>
  <h1>You have currently no friends, you lonely wolf</h1>
<% end %>
