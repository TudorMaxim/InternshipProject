<% provide(:title, 'My Friends') %>
<% if !@my_friends.empty? %>
  <h1>My Friends</h1>
  <div class="text-center">
    <%= will_paginate @my_friends %>
  </div>
  <ul class="users">
      <% @my_friends.each do |u| %>
      <li>
        <%= gravatar_for u, size: 50 %>
        <%= link_to u.full_name, u %> <br />
      </li>
      <% end %>
  </ul>
  <div class="text-center">
    <%= will_paginate @my_friends %>
  </div>
<% else %>
  <h1>You have currently no friends, you lonely wolf</h1>
<% end %>
