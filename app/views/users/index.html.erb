<% provide(:title, 'All users') %>
<h1>All users</h1>

<div class="text-center">
  <%= will_paginate %>
</div>
<ul class="users">
    <% @users.each do |u| %>
    <li>
      <%= gravatar_for u, size: 50 %>
      <%= link_to u.full_name, u %> <br />
    </li>
    <% end %>
</ul>

<div class="text-center">
  <%= will_paginate %>
</div>
